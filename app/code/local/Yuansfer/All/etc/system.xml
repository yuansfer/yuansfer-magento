<?xml version="1.0"?>
<config>
  <sections>
    <payment>
      <groups>
        <yuansfer translate="label" module="yuansfer_all">
          <label>Yuansfer Module</label>
          <sort_order>1000</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
          <fields>
            <yuansfer_merchant_no translate="label">
              <label>Merchant NO.</label>
              <frontend_type>text</frontend_type>
              <sort_order>1</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>
            </yuansfer_merchant_no>
            <yuansfer_store_no translate="label">
              <label>Store NO.</label>
              <frontend_type>text</frontend_type>
              <sort_order>2</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>
            </yuansfer_store_no>
            <yuansfer_mode translate="label">
              <label>Test Mode</label>
              <comment><![CDATA[Set this to No when you are ready to accept payments]]></comment>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>5</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>
            </yuansfer_mode>

            <yuansfer_test_apikey translate="label">
              <label>Test API Token</label>
              <frontend_type>text</frontend_type>
              <sort_order>12</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>
            </yuansfer_test_apikey>
            <yuansfer_live_apikey translate="label">
              <label>Live API Token</label>
              <frontend_type>text</frontend_type>
              <sort_order>13</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>
            </yuansfer_live_apikey>

            <heading_securepay translate="label">
              <label>SecurePay Settings</label>
              <frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
              <sort_order>55</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>0</show_in_store>
            </heading_securepay>

            <unionpay_active translate="label">
              <label>UnionPay Enabled</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
              <sort_order>60</sort_order>
            </unionpay_active>
            <unionpay_title translate="label">
              <label>UnionPay Title</label>
              <frontend_type>text</frontend_type>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
              <sort_order>62</sort_order>
            </unionpay_title>

            <alipay_active translate="label">
              <label>Alipay Enabled</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
              <sort_order>65</sort_order>
            </alipay_active>
            <alipay_title translate="label">
              <label>AliPay Title</label>
              <frontend_type>text</frontend_type>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
              <sort_order>67</sort_order>
            </alipay_title>

            <wechatpay_active translate="label">
              <label>WechatPay Enabled</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
              <sort_order>70</sort_order>
            </wechatpay_active>
            <wechatpay_title translate="label">
              <label>WechatPay Title</label>
              <frontend_type>text</frontend_type>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
              <sort_order>72</sort_order>
            </wechatpay_title>
          </fields>
        </yuansfer>
      </groups>
    </payment>
  </sections>
</config>
